<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".RequestService">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request Service"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/colorRed"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3"
            android:layout_marginTop="30sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Category:"
                android:textSize="25sp"
                android:background="@color/colorRed"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:entries="@array/category_arrays"
                android:spinnerMode="dropdown"
                android:layout_marginLeft="20sp"/>

        </LinearLayout>


        <EditText
            android:id="@+id/serviceAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColorHint="@color/colorWhite"
            android:textColor="@color/colorWhite"
            android:inputType="text"
            android:textSize="25dp"
            android:hint="Service Address"
            android:background="@color/colorRed"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/serviceDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColorHint="@color/colorWhite"
            android:textColor="@color/colorWhite"
            android:inputType="date"
            android:textSize="25dp"
            android:hint="Service Date"
            android:background="@color/colorRed"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/serviceTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColorHint="@color/colorWhite"
            android:textColor="@color/colorWhite"
            android:inputType="date"
            android:textSize="25dp"
            android:hint="Service Time"
            android:onClick="setTime"
            android:background="@color/colorRed"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/serviceDes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:textColorHint="@color/colorWhite"
            android:textColor="@color/colorWhite"
            android:inputType="text"
            android:textSize="25dp"
            android:hint="Service Description"
            android:background="@color/colorRed"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Service Assignation Method"
            android:background="@color/colorTextBox"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="50dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fixedPrice"
                android:background="@drawable/btnsigninbg"
                android:text="Fixed Price"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <!--<Button-->
                <!--android:id="@+id/bidding"-->
                <!--android:background="@drawable/btnsignupbg"-->
                <!--android:layout_marginLeft="15dp"-->
                <!--android:text="Bidding"-->
                <!--android:textStyle="bold"-->
                <!--android:textColor="@color/colorWhite"-->
                <!--android:textSize="20dp"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="1"/>-->

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
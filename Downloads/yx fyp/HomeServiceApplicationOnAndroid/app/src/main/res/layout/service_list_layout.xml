<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="25dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_centerHorizontal="false"
    android:layout_centerVertical="true"
    app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="550dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtView_customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:gravity="center_vertical|start"
                android:text="Customer Name"
                android:textAllCaps="true"
                android:textColor="@color/colorDarkRed"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:gravity="center_vertical|start"
                android:textAllCaps="true"
                android:textColor="@color/colorDarkRed"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txtView_contractor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="40dp"
                android:gravity="center_vertical|start"
                android:text="Contractor Name"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/contractor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:gravity="center_vertical|start"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txtView_service_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="40dp"
                android:gravity="center_vertical|start"
                android:text="Service Status"
                android:textAllCaps="true"
                android:textColor="@color/colorDarkRed"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/service_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:gravity="center_vertical|start"
                android:textAllCaps="true"
                android:textColor="@color/colorDarkRed"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txtView_service_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="40dp"
                android:gravity="center_vertical|start"
                android:text="Service Date"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/service_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:gravity="center_vertical|start"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txtView_service_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="7dp"
                android:gravity="center_vertical|start"
                android:text="Service Time"
                android:textAllCaps="true"
                android:textColor="@color/colorDarkRed"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/service_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:gravity="center_vertical|start"
                android:textAllCaps="true"
                android:textColor="@color/colorDarkRed"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txtView_service_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="7dp"
                android:gravity="center_vertical|start"
                android:text="Service Address"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/service_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:gravity="center_vertical|start"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txtView_service_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="7dp"
                android:gravity="center_vertical|start"
                android:text="Service Category"
                android:textAllCaps="true"
                android:textColor="@color/colorDarkRed"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/service_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:gravity="center_vertical|start"
                android:textAllCaps="true"
                android:textColor="@color/colorDarkRed"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txtView_service_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="7dp"
                android:gravity="center_vertical|start"
                android:text="Service Description"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/service_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:gravity="center_vertical|start"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txtView_fixed_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="7dp"
                android:gravity="center_vertical|start"
                android:text="Fixed Price"
                android:textAllCaps="true"
                android:textColor="@color/colorDarkRed"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fixed_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:gravity="center_vertical|start"
                android:textAllCaps="true"
                android:textColor="@color/colorDarkRed"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/txtView_cus_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="7dp"
                android:gravity="center_vertical|start"
                android:text="Rating"
                android:textAllCaps="true"
                android:textColor="@color/colorRed"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rating1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:gravity="center_vertical|start"
                android:textAllCaps="true"
                android:textColor="@color/colorRed"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/btn_Complete"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="35dp"
                android:text="Service Done"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorWhite"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/txtView_bidding_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="7dp"
                android:gravity="center_vertical|start"
                android:text="Bidding Price"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/bidding_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:gravity="center_vertical|start"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold|italic"
                android:visibility="invisible"/>



        </LinearLayout>


</android.support.v7.widget.CardView>
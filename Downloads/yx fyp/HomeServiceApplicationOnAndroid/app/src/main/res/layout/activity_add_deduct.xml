<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    android:orientation="vertical"
    tools:context=".addDeduct">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="20sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="40dp"
                android:text="Name  :"
                android:textSize="35sp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/eCoinName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint=""
                android:textColor="@color/colorPrimary"
                android:textSize="35sp"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="20sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="40dp"
                android:text="E-Coin :"
                android:textSize="35sp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/editCoinshow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="100"
                android:textColor="@color/colorPrimary"
                android:textSize="35sp"
                android:layout_weight="1"/>

        </LinearLayout>

        <Button
            android:id="@+id/addCoin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btnsignupbg"
            android:layout_marginTop="100dp"
            android:textSize="20sp"
            android:text="Add E-Coin"
            android:textColor="@color/colorWhite"/>

        <Button
            android:id="@+id/deductCoin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btnsigninbg"
            android:layout_marginTop="60dp"
            android:textSize="20sp"
            android:text="Deduct E-Coin"
            android:textColor="@color/colorWhite"/>

        </LinearLayout>

</LinearLayout>